// Media Queries

@media screen and (max-width 425px)
  .btn-open-bag
    width 140px
    height @width
    padding 16px

    span
      font-size 15px

    img
      width 45px
      height @width

@media screen and (max-width 500px)
  .modal
    width 98%

  .list-categories
    .item
      margin-right 12px

      a
        img
          width 30px

        .title-categorie
          font-size 12px

    .all a img
      margin-top 2px

