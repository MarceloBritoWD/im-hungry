// index
.header
  width 100%
  height auto
  background corPrincipal
  display table

  h1
    font-size 52px
    color #fff
    font-weight bold
    text-shadow 4px 4px corSecundaria - 20%
    margin 40px auto
    text-align center


.container-search
  width 100%
  height auto
  background corSecundaria
  padding 10px 0

  input
    width 450px
    font-size 20px
    padding 10px
    border-radius(3px)
    display table
    margin 0 auto


main
  width 1280px
  height auto
  display table
  margin 0 auto


.list-categories
  width auto
  height 120px
  display table
  margin 20px auto

  .item
    width 100px
    display inline
    display table
    float left
    margin-right 40px

    a
      width 100%
      height @width
      float left
      text-align center
      color #db9e4d
      cursor pointer
      transition(opacity .3s)
      &:hover
        opacity .7

      img
        width 50px
        display block
        margin 0 auto


      .title-categorie
        width 100%
        font-size 20px
        color corPrincipal
        font-weight bold
        text-align center

  .all a img
    margin-top 8px
    width 40px


.products-list
  width 100%

  .item
    width 20%
    height 180px
    display inline
    float left
    margin-bottom 40px

  .img-item
    width 80px
    display table
    margin 0 auto
    text-align center

  .title-item
    width 100%
    font-size 18px
    color corMarrom
    display table
    text-align center

  .price-item
    font-size 18px
    color corPrincipal
    font-weight bold
    display table
    margin 0 auto

  .add-item
    font-size 15px
    color #fff
    padding 5px 10px
    background corPrincipal
    display table
    margin 10px auto 0 auto
    cursor pointer
    border-radius(4px)
    &:hover
      background @background - 20%


.inc-bag
  animation(bounceIn .4s)

.btn-open-bag
  width 200px
  height @width
  position fixed
  bottom 2%
  right 1%
  background corPrincipal
  border-radius(50%)
  padding 24px
  cursor pointer
  transition(.2s ease-in)
  &:hover
    background @background - 20%

  span
    font-size 18px
    color #fff
    font-weight bold
    width auto
    display table
    margin 0 auto

  img
    width 80px
    height @width
    display table
    margin 10px auto





.bag-full-anim-in
  animation(bounceInUp .7s)

.bag-full-anim-out
  animation(bounceOutDown 1s)

.bag-full
  width 350px
  height 400px
  background corPrincipal
  position fixed
  bottom 2%
  right 1%
  padding 15px
  border-radius(5px)
  display none


.header-bag
  width 90%
  display table
  margin 0 auto
  position relative

  img
    width 60px
    height @width
    display table
    float left

  h1
    font-size 25px
    color #fff
    margin 0 0 0 15px
    display table
    float left
    width auto
    text-align right

    small
      font-size 14px
      display block

.close-bag
  width 40px
  height 40px
  position absolute
  top 5px
  right 0
  background url(../imgs/close.svg) no-repeat center
  cursor pointer

.list-items
  width 100%
  height 220px
  // overflow-y scroll
  margin-top 10px

  li
    width 100%
    padding 2px 10px
    background corPrincipal + 10%
    color #fff
    &:nth-child(even)
      background corPrincipal - 20%

  .qtt-item
    font-size 24px
    line-height 100%

    &:after
      content 'x'
      font-size 12px
      margin-left 1px


  .title-item
    font-size 15px
    margin-left 10px

  .btns-qtt
    display table
    float right
    margin-top 2px

    button
      width 24px
      height 24px
      cursor pointer
      &:hover
        opacity .7

    .dec-item
      background url(../imgs/dec.svg) no-repeat center

    .inc-item
      background url(../imgs/inc.svg) no-repeat center

.price-bag
  font-size 18px
  color #fff
  display table
  // margin 0 auto
  margin-top 5px


.proceed-btn
  font-size 16px
  color #fff
  text-transform uppercase
  background corPrincipal - 20%
  padding 14px 10px
  width 80%
  display table
  position absolute
  bottom 15px
  left 50%
  cursor pointer
  transform(translateX(-50%))
  &:hover
    background @background - 20%




.overlay
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  background rgba(#000, .7)
  display none

.modal
  width 500px
  height 150px
  background #fff
  position relative
  top 50%
  left 50%
  transform(translate(-50%, -50%))
  padding 20px
  border-radius(3px)

  h1
    font-size 1.5em
    color corPrincipal
    width 100%
    text-align center
